<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"

        android:ems="10"
        android:hint="Name"
        android:inputType="textPersonName"
        android:textColor="#A52323"
        android:textColorHint="@color/hint"
        android:padding="5dp"
        android:background="#00BAC6CA"
        android:layout_margin="10dp"
        android:textSize="16dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etDialogInputName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#2DBAC6CA"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"

        android:ems="10"
        android:hint="Email"
        android:inputType="textPersonName"
        android:textColor="#A52323"
        android:textColorHint="@color/hint"
        android:padding="5dp"
        android:background="#00BAC6CA"
        android:layout_margin="10dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etDialogInputEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#19BAC6CA" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"

        android:ems="10"
        android:hint="Phone"
        android:inputType="textPersonName"
        android:textColor="#A52323"
        android:textColorHint="@color/hint"
        android:padding="5dp"
        android:background="#00BAC6CA"
        android:layout_margin="10dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etDialogInputPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#2DBAC6CA" />
    </com.google.android.material.textfield.TextInputLayout>

</LinearLayout>