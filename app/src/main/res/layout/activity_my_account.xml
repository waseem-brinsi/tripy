<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.Signup.SignupActivity"
    android:background="@drawable/background">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/llNavigation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:orientation="vertical"
            app:layout_constraintVertical_bias="0.2">

            <ImageView
                android:id="@+id/imgUpdateProfile"
                android:layout_width="match_parent"
                android:layout_height="142dp"

                android:padding="5dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_baseline_account_circle_24" />


            <TextView
                android:id="@+id/tvUpdateName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="15dp"
                android:background="@drawable/input_bg"
                android:padding="5dp"
                android:text="Name :"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvUpdateEmail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="15dp"
                android:background="@drawable/input_bg"
                android:padding="5dp"
                android:text="Email :"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvUpdatePhone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="15dp"
                android:background="@drawable/input_bg"
                android:padding="5dp"
                android:text="Phone :"
                android:textSize="16dp"
                android:textStyle="bold" />


            <!-- Signup -->
            <Button
                android:id="@+id/btnUpdateUser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:background="@drawable/btn_bg"
                android:text="Update User" />
            <!-- Login -->
            <Button
                android:id="@+id/btnNewPlaceCancel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@drawable/btn_bg"
                android:text="Cancel" />


        </LinearLayout>


    </ScrollView>
    <LinearLayout
        android:id="@+id/llNavigation"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/purple_500"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView android:id="@+id/btnHome1"
            android:layout_width="32dp"
            android:layout_height="24dp"
            android:layout_weight="1"
            android:src="@drawable/ic_baseline_home_24" />

        <ImageView android:id="@+id/btnHotels1"
            android:layout_width="28dp"
            android:layout_height="24dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_baseline_location_city_24" />

        <ImageView android:id="@+id/btnAddNew1"
            android:layout_width="32dp"
            android:layout_height="24dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_baseline_add_to_photos_24" />

        <ImageView android:id="@+id/btnAccounte1"
            android:layout_width="38dp"
            android:layout_height="24dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_baseline_account_circle_24" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>